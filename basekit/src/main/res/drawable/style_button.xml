<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 已點選狀態時樣式-->
    <item android:state_pressed="true" >
        <shape>
            <!-- 背景填充色-->
            <gradient
                android:startColor="#0069FF"
                android:centerColor="#0069FF"
                android:endColor="#0069FF"
                android:angle="90"/>

            <!-- 邊框顏色-->
            <stroke
                android:width="1dp"
                android:color="#0069FF" />

            <!-- 角度-->
            <corners android:radius="3dp" />

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <!-- 未點選狀態時樣式-->
    <item>
        <shape>
            <!-- 背景填充色-->
            <gradient
                android:startColor="#FF9600"
                android:centerColor="#FF9600"
                android:endColor="#FF9600"
                android:angle="90"/>

            <!-- 邊框顏色-->
            <stroke
                android:width="1dp"
                android:color="#FF9600" />

            <!-- 角度-->
            <corners android:radius="3dp" />

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>


</selector>